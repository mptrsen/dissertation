  journal = {Proceedings of the National Academy of Sciences},
  author = {Dunn, Casey W. and Zapata, Felipe and Munro, Catriona and Siebert, Stefan and Hejnol, Andreas},
  month = jan,
  year = {2018},
  keywords = {functional genomics,gene expression,hourglass,ortholog conjecture,phylogenetics},
  pages = {E409-E417},
  file = {/home/mpetersen/bib/storage/KQ9YR6DQ/Dunn et al. - 2018 - Pairwise comparisons across species are problemati.pdf;/home/mpetersen/bib/storage/9YS8M2Z8/E409.html},
  pmid = {29301966}
